{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "git-submodules": {
    "enabled": true,
    "versioning": "git",
    "fileMatch": [
      "(^|/).gitmodules$"
    ]
  },
  "packageRules": [
    {
      "matchManagers": ["git-submodules"],
      "enabled": true
    }
  ]
}
